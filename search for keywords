public static boolean executeSearch(ArrayList <String> searchArray, String searchText) {
	 
		
		if(searchText == null)
			return false;
			
			
		BufferedReader br = null;
		String fileName = TEXTFILE_NAME;
	 
		try {
	 
			String sCurrentLine;
	 
			br = new BufferedReader(new FileReader(fileName));
	 
			while ((sCurrentLine = br.readLine()) != null) {
				String text = sCurrentLine;
				if(text.contains(searchText)){
					searchArray.add(text);
				}
			}
			printSearchResults(searchArray);
		}
			
		catch (IOException e) {
			e.printStackTrace();
		} finally {
			try {
				if (br != null)br.close();
				return true;
			} catch (IOException ex) {
				ex.printStackTrace();
			}
		}
		return true;
			
	 
	}
